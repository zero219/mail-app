<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mail.admin.mapper.SysUserRoleMapper">

    <!-- 公共字段提取 -->
    <sql id="Base_Column_List">
            id,
            role_id,
            user_id,
            created_by,
            create_time,
            updated_by,
            update_time,
            is_deleted
    </sql>

    <!-- 查询符合条件的总记录数 -->
    <select id="findCount" resultType="int">
        SELECT COUNT(*)
        FROM sys_user_role
        <where>
            <!-- 如果查询条件中有某个字段，进行过滤 -->
            <if test="id != null">
                AND id = #{id}
            </if>
        </where>
    </select>

    <!-- 根据分页条件查询当前页的数据 -->
    <select id="findPageList" resultType="SysUserRole">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_user_role
        <where>
            <!-- 如果查询条件中有某个字段，进行过滤 -->
            <if test="query.id != null">
                AND id = #{query.id}
            </if>
        </where>
        <!-- 使用 LIMIT 进行分页查询 -->
        LIMIT #{offset}, #{limit}
    </select>


    <!-- 查询所有 -->
    <select id="findAll" resultType="com.mail.admin.entity.SysUserRole">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_user_role
    </select>

    <!-- 根据ID查询 -->
    <select id="findById" resultType="com.mail.admin.entity.SysUserRole" parameterType="Long">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_user_role
        WHERE id = #{id}
    </select>

    <!-- 批量ID查询 (根据多个ID查询列表) -->
    <select id="findBatchIds" resultType="com.mail.admin.entity.SysUserRole">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_user_role
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <!-- 插入 -->
    <insert id="addSysUserRole" parameterType="com.mail.admin.entity.SysUserRole">
        INSERT INTO sys_user_role
        <trim prefix="(" suffix=")" suffixOverrides=",">
                id,
                role_id,
                user_id,
                created_by,
                create_time,
                updated_by,
                update_time,
                is_deleted
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
                id,
                role_id,
                user_id,
                created_by,
                create_time,
                updated_by,
                update_time,
                is_deleted
        </trim>
    </insert>

    <!-- 更新 -->
    <update id="updateSysUserRole" parameterType="com.mail.admin.entity.SysUserRole">
        UPDATE sys_user_role
        <set>
                <if test="id != null">id = #{id},</if>
                <if test="roleId != null">role_id = #{roleId},</if>
                <if test="userId != null">user_id = #{userId},</if>
                <if test="createdBy != null">created_by = #{createdBy},</if>
                <if test="createTime != null">create_time = #{createTime},</if>
                <if test="updatedBy != null">updated_by = #{updatedBy},</if>
                <if test="updateTime != null">update_time = #{updateTime},</if>
                <if test="isDeleted != null">is_deleted = #{isDeleted}</if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 删除 -->
    <delete id="delSysUserRole" parameterType="Long">
        DELETE FROM sys_user_role
        WHERE id = #{id}
    </delete>

    <!-- 根据userID查询 -->
    <select id="findBySysUserRole" resultType="com.mail.admin.entity.SysUserRole" parameterType="Long">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_user_role
        WHERE user_id = #{userId}
    </select>

</mapper>
